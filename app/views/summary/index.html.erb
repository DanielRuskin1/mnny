<div class="summary-container" data-currency="<%= @currency %>">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header summary-header">Summary</h1>
    </div>
  </div>

  <% if @data_unavailable %>
    <div class="alert alert-warning" data-page-disabled="true">
      <h2>Whoops!</h2>

      It looks like we're still gathering data on your portfolio. <br/>
      Please check back in 10-15 minutes to view your summary.
    </div>
  <% else %>
    <%= render("options") %>
    <%= render("current_balances", accounts: @accounts, balances: @balances) %>
    <%= render("graph") %>
  <% end %>
</div>
