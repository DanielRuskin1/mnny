<div class="card card-block">
  <h4 class="card-title">
    Get Help
  </h4>
  <div class="card-text card-text-with-padding">
    <div class="row">
      <%= form_tag(submit_help_index_path, remote: true, html: { class: "form-horizontal" }) do %>
        <div class="form-group row">
          <%= label_tag(:email, "Email", class: "col-sm-2 col-form-label") %>

          <div class="col-sm-5">
            <% if current_user.present? %>
              <%= text_field_tag(:email, current_user.email, { class: "form-control", disabled: true }) %>
            <% else %>
              <%= text_field_tag(:email, "", { class: "form-control" }) %>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= label_tag(:subject, "Subject", class: "col-sm-2 col-form-label") %>

          <div class="col-sm-5">
            <%= text_field_tag(:subject, "", { class: "form-control" }) %>
          </div>
        </div>

        <div class="form-group row">
          <%= label_tag(:message, "Message", class: "col-sm-2 col-form-label") %>

          <div class="col-sm-5">
            <%= text_area_tag(:message, "", { class: "form-control" }) %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= submit_tag("Submit", class: "btn btn-default btn-primary") %>
          </div>
        </div>
      <% end %>
    </div>

    <div id="help-error" class="hidden">
      <%= render("shared/result/error", result: {}) %>
    </div>
    <div id="help-success" class="hidden">
      <%= render("shared/result/success", result: {}) %>
    </div>
  </div>
</div>
